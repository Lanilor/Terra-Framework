  <!--============================= Ice =============================-->

	<TerrainDef Name="IceBase" Abstract="True">
		<texturePath>Terrain/Surfaces/Ice</texturePath>
		<edgeType>FadeRough</edgeType>
		<renderPrecedence>350</renderPrecedence>
		<pathCost>12</pathCost>
		<statBases>
			<Beauty>-1</Beauty>
		</statBases>
		<scatterType>SoftGray</scatterType>
		<affordances>
