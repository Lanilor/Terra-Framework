<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--============================= Generic bases =============================-->

	<TerrainDef Name="TerrainBase" Abstract="True">
		<renderPrecedence>350</renderPrecedence>
		<edgeType>FadeRough</edgeType>
		<pathCost>1</pathCost>
		<fertility>0</fertility>
	</TerrainDef>
	
